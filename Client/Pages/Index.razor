@page "/"

@using System.Drawing;

@inject IJSRuntime JsRuntime

<h1>Hello, world!</h1>

<button @onclick="PrintWindowWidthToConsole">
    Print window width to console
</button>

@code {
    private ElementReference Element { get; set; }

    private async Task PrintWindowWidthToConsole()
    {
        var pointless = false;

        if (pointless)
        {
            //await JsRuntime.InvokeAsync<RectangleF>("");
        }

        var windowSize = await JsRuntime.InvokeAsync<List<RectangleF>>("getWindowSize");

        Console.WriteLine($"Window width according to Blazor = {windowSize[0].Width}");
    }
}
